{% extends '_base.njk' %}


{% block title %}Example page 2{% endblock %}


{% block content %}
    <div class="container">
        <div class="row">
            <div class="col p-4">
                <h1>Example page 2</h1>
                <p class="text-custom-color">This page features a few colors. Look at the template <code>src/templates/example-page-2.njk</code> and see that these samples are not hardcoded in it.</p>
                <p>Back to the <a href="/">homepage</a></p>
                <p>Or see more at <a href="example-page-1" class="btn btn-success btn-lg">Example page 1</a></p>
            </div>
        </div>

        <div class="row">
            <div class="col-12 mt-5">
                <h2>Color samples</h2>
                <p>These color samples are generated from data provided in <code>data.json</code> file.</p>
            </div>
            {% for color in sampleColors %}
                <div class="col mb-4">
                    {{ color.name }}
                    <div style="background-color: {{ color.value }};" class="w-100 py-5"></div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
